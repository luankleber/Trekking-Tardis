<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Overlay -->
    <com.example.yolo.OverlayView
        android:id="@+id/overlayView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Debug Angle View -->
    <com.example.yoloconedetector.DebugAngleView
        android:id="@+id/debugAngleView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Mapa no canto inferior direito -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_margin="16dp"
        android:background="@android:color/darker_gray"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botão Add Waypoint -->
    <Button
        android:id="@+id/addWaypointButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Waypoint"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="@id/mapView"
        app:layout_constraintStart_toStartOf="@id/mapView" />

    <!-- Botão Clear Waypoints -->
    <Button
        android:id="@+id/clearWaypointsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Waypoints"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="@id/mapView"
        app:layout_constraintStart_toEndOf="@id/addWaypointButton" />

    <!-- Botão Ir para WaypointsManager -->
    <Button
        android:id="@+id/openWaypointManagerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waypoints"
        android:layout_margin="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
